<div class="card__header">
  <% if has_link_to_resource? %>
    <%= link_to resource_path, class: "card__link" do %>
      <div class="card__title">
        <%= title %>
      </div>
    <% end %>
  <% else %>
    <div class="card__link">
      <div class="card__title">
        <%= title %>
      </div>
    </div>
  <% end %>
  <%= cell "decidim/author", presented_resource.author, from: resource, has_actions: true, skip_profile_link: true %>
</div>
