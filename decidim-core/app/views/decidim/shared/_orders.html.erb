<% menu_id = "#{SecureRandom.uuid}_order_by_menu" %>
<div class="order-by">
  <% orders.each do |order_name| %>
    <%= order_link order_name,
        i18n_scope: i18n_scope,
        title: t("#{i18n_scope}.label"),
        role: "menuitem",
        class: "button button__sm button__text-secondary #{order_name == order ? 'underline font-bold' : '' }"
         %>
  <% end %>
</div>
